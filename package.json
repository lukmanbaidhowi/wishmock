{
  "name": "wishmock",
  "type": "module",
  "description": "gRPC mock server with protobufjs, hot reload, and rule-based responses",
  "version": "0.9.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukmanbaidhowi/wishmock.git"
  },
  "main": "dist/app.js",
  "bin": {
    "wishmock": "bin/wishmock.js",
    "wishmock-mcp": "bin/wishmock-mcp.js"
  },
  "files": [
    "dist/",
    "bin/",
    "scripts/generate-descriptor-set.sh",
    "scripts/get-loadable-protos.mjs",
    "frontend/",
    "README.md",
    "docs/rule-examples.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "chokidar": "^3.6.0",
    "express": "^4.21.2",
    "grpc-node-server-reflection": "^1.0.2",
    "js-yaml": "^4.1.0",
    "lodash.get": "^4.4.2",
    "multer": "^2.0.2",
    "protobufjs": "^7.5.4",
    "@modelcontextprotocol/sdk": "^1.21.1"
  },
  "overrides": {
    "tar": "^7.5.2",
    "brace-expansion": "^2.0.2",
    "tmp": "^0.2.4",
    "taffydb": "npm:noop-package@^1.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22.19.0",
    "@types/multer": "^2.0.0"
  },
  "scripts": {
    "dev": "bun run start:develop",
    "prestart": "bun run build && bun run descriptors:generate",
    "build": "tsc -p tsconfig.json && bun run build:frontend",
    "descriptors:generate": "bash scripts/generate-descriptor-set.sh",
    "start": "bash scripts/start.sh",
    "build:watch": "tsc -w -p tsconfig.json",
    "start:develop": "bun scripts/dev.mjs",
    "start:develop:ts": "bun --watch src/app.ts",
    "build:frontend": "bun build frontend/app.ts --outfile frontend/dist/app.js --target=browser --minify",
    "dev:frontend": "bun build frontend/app.ts --outfile frontend/dist/app.js --target=browser --watch",
    "protos:fetch": "bash scripts/fetch-third-party-protos.sh",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "coverage:html": "bun scripts/coverage-html.mjs",
    "start:node": "tsc -p tsconfig.json && node dist/app.js",
    "start:cluster": "tsc -p tsconfig.json && node bin/cluster.mjs",
    "start:node:watch": "node --watch dist/app.js",
    "start:mcp": "bun dist/mcp/server.sdk.js",
    "start:mcp:ts": "bun --watch src/mcp/server.sdk.ts",
    "start:mcp:http": "bun dist/mcp/server.sse.js",
    "start:mcp:http:ts": "bun --watch src/mcp/server.sse.ts",
    "prestart:both:mcp": "bun run build",
    "start:both:mcp": "bun scripts/dev.mcp.mjs",
    "test:examples": "bash scripts/test-examples.sh",
    "test:examples:import-proto": "bash scripts/test-examples-import-proto.sh",
    "validation:debug": "bun scripts/debug-validation.mjs",
    "validation:test": "bash scripts/test-validation-e2e.sh",
    "validation:comprehensive": "bash scripts/test-validation-comprehensive.sh",
    "validation:all": "bash scripts/test-validation-all.sh",
    "validation:all:node": "UNIT=false RUNNER=node bash scripts/test-validation-all.sh",
    "validation:all:bun": "RUNNER=bun bash scripts/test-validation-all.sh",
    "test:e2e": "bash scripts/test-e2e-all.sh",
    "test:e2e:node": "RUNNER=node bash scripts/test-e2e-all.sh",
    "test:e2e:bun": "RUNNER=bun bash scripts/test-e2e-all.sh",
    "validation:e2e:protovalidate": "bash scripts/test-protovalidate-official-e2e.sh",
    "validation:e2e:protovalidate:oneof": "bash scripts/test-protovalidate-oneof-e2e.sh",
    "validation:e2e:protovalidate:bytes": "bash scripts/test-protovalidate-bytes-e2e.sh",
    "validation:e2e:protovalidate:maps": "bash scripts/test-protovalidate-maps-e2e.sh",
    "validation:e2e:protovalidate:wkt:timestamp-duration": "bash scripts/test-protovalidate-wkt-timestamp-duration-e2e.sh",
    "validation:e2e:protovalidate:wkt:any": "bash scripts/test-protovalidate-wkt-any-e2e.sh",
    "compose:validate": "bash scripts/compose/lint.sh --file docker-compose.yml && bash scripts/compose/lint.sh --file node-docker-compose.yaml && bash scripts/compose/dry-run.sh --file docker-compose.yml && bash scripts/compose/dry-run.sh --file node-docker-compose.yaml",
    "compose:lint": "bash scripts/compose/lint.sh --file docker-compose.yml && bash scripts/compose/lint.sh --file node-docker-compose.yaml",
    "compose:grpcurl": "bash scripts/docker/grpcurl-smoke.sh --request fixtures/grpcurl/helloworld.SayHello.request.json --expected fixtures/grpcurl/helloworld.SayHello.response.json",
    "tools:assets:pull-latest": "bun scripts/tools/assets-pull-latest.ts",
    "prepublishOnly": "tsc -p tsconfig.json"
  }
}
