{
  "name": "wishmock",
  "type": "module",
  "description": "Bun/Node gRPC mock server with protobufjs, hot reload, and rule-based responses",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/app.js",
  "bin": {
    "wishmock": "bin/wishmock.js",
    "wishmock-mcp": "bin/wishmock-mcp.js"
  },
  "files": [
    "dist/",
    "bin/",
    "frontend/",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.6",
    "@grpc/proto-loader": "^0.8.0",
    "chokidar": "^3.6.0",
    "express": "^4.19.2",
    "grpc-node-server-reflection": "^1.0.2",
    "js-yaml": "^4.1.0",
    "lodash.get": "^4.4.2",
    "protobufjs": "^7.4.0",
    "@modelcontextprotocol/sdk": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "google-protobuf": "^3.21.4",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "dev": "bun run start:develop",
    "prestart": "bun run build",
    "build": "tsc -p tsconfig.json && bun run build:frontend",
    "start": "bun dist/app.js",
    "build:watch": "tsc -w -p tsconfig.json",
    "start:develop": "bun scripts/dev.mjs",
    "start:develop:ts": "bun --watch src/app.ts",
    "build:frontend": "bun build frontend/app.ts --outfile frontend/dist/app.js --target=browser --minify",
    "dev:frontend": "bun build frontend/app.ts --outfile frontend/dist/app.js --target=browser --watch",
    "protos:fetch": "bash scripts/fetch-third-party-protos.sh",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "coverage:html": "bun scripts/coverage-html.mjs",
    "start:node": "tsc -p tsconfig.json && node dist/app.js",
    "start:node:watch": "node --watch dist/app.js",
    "start:mcp": "bun dist/mcp/server.sdk.js",
    "start:mcp:ts": "bun --watch src/mcp/server.sdk.ts",
    "start:mcp:http": "bun dist/mcp/server.sse.js",
    "start:mcp:http:ts": "bun --watch src/mcp/server.sse.ts",
    "prestart:both:mcp": "bun run build",
    "start:both:mcp": "bun scripts/dev.mcp.mjs",
    "test:examples": "bash scripts/test-examples.sh",
    "test:examples:import-proto": "bash scripts/test-examples-import-proto.sh",
    "prepublishOnly": "tsc -p tsconfig.json"
  }
}
